<?xml version="1.0" encoding="utf-8"?>
<manifest package="me.jinkun.activityanimation"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppAnimationTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".AlphaActivity">
        </activity>
        <activity android:name=".TranslateActivity">
        </activity>
        <activity android:name=".TranslateInAndAlphaOutActivity">
        </activity>
        <activity
            android:name=".AnimXmlActivity"
            android:theme="@style/AppAnimationTheme">
        </activity>
        <activity android:name=".ScaleActivity">
        </activity>
    </application>

</manifest>